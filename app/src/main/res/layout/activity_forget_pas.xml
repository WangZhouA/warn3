<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_bar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/forget_pas_num"
            android:drawableLeft="@drawable/ic_iphone"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:hint="@string/login_number_message"
            android:maxLength="11"
            android:digits="0123456789"
            android:singleLine="true"
            android:textColor="#42000000"
            android:drawablePadding="15dp"
            android:textSize="14dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/llt_num"
        android:background="@color/gry"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />


    <RelativeLayout
        android:id="@+id/llt_pas"
        android:layout_below="@+id/llt_num"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">



        <EditText

            android:id="@+id/forget_pas_pas"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="15dp"

            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:hint="@string/login_password_message"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM~!@#$%^*."
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="#42000000"
            android:textSize="14dp"

            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="49dp">

            <ImageButton
                android:id="@+id/forget_pas_eyes"
                android:background="#00000000"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_open"/>

        </RelativeLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#00F0F0F0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_pass" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/forget_pas_key_get"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM~!@#$%^*."
            android:hint="请输入验证码"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="49dp">

            <Button
                android:id="@+id/forget_pas_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:text="@string/key_get"
                android:textColor="#4f5154" />

        </RelativeLayout>


    </LinearLayout>












    <View
        android:id="@+id/reg_t"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#00F0F0F0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:background="#00000000" />

    <Button
        android:id="@+id/forget_pas_sure"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/def_login_btn"
        android:text="@string/sure"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

</LinearLayout>

