<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_bar"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gry" />

    <!--<ListView-->
        <!--android:id="@+id/network_list"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

    <!--</ListView>-->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/index_tv_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/index_tx_bg"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="1"
            android:textColor="#ffffff"
            android:layout_marginTop="5dp"

            />

        <TextView
            android:id="@+id/et_msg_12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/index_tv_12"
            android:digits="0123456789"
            android:maxLength="11"
            android:singleLine="true"
            android:background="@null"
            android:hint="@string/Enter_the_contact_number" />

        <ImageView
            android:id="@+id/im_add_phone_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/add" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gry"
        ></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/index_tv_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/index_tx_bg"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="2"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/et_msg_13"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/index_tv_13"
            android:digits="0123456789"
            android:maxLength="11"
            android:singleLine="true"
            android:background="@null"
            android:hint="@string/Enter_the_contact_number"/>

        <ImageView
            android:id="@+id/im_add_phone_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/add" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gry"
        ></View>




</LinearLayout>
